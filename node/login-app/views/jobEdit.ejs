<!-- Header -->
<%- include('./layouts/header') %>
<!-- Navbar -->
<%- include('./layouts/nav') %>
<!-- Content -->
<div class="container">
  <div class="row mt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4 form-body">
      <h1 class="text-center">Edit</h1>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-danger" role="alert"><%= msg %></div>
      <% } %>
      <form method="POST" action="/job/edit/save">
        <div class="mb-3">
          <!-- Hidden id -->
          <input
            type="hidden"
            id="userId"
            name="userId"
            value="<%= loggedUser.id %>"
          />
          <!-- Hidden old position -->
          <input
            type="hidden"
            id="oldPosition"
            name="oldPosition"
            value="<%= job.position %>"
          />
          <!-- Hidden old instance -->
          <input
            type="hidden"
            id="oldInstance"
            name="oldInstance"
            value="<%= job.instance %>"
          />
          <label class="form-label">Position</label>
          <input
            type="text"
            id="position"
            name="position"
            class="form-control"
            value="<%= job.position %>"
          />
        </div>

        <div class="mb-3">
          <label class="form-label">Instance</label>
          <input
            type="text"
            id="instance"
            name="instance"
            class="form-control"
            value="<%= job.instance %>"
          />
        </div>
        
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input
                type="text"
                id="address"
                name="address"
                class="form-control"
                value="<%= job.address %>"
            />
        </div>
        
        
        <div class="mb-3">
              <label for="portal" class="form-label">Portal</label>
              <select class="form-select" name="portal" id="portal">
                <option <%= job.portal == 'LinkedIn' ? selected='selected' : '' %> value="LinkedIn">LinkedIn</option>
                <option <%= job.portal == 'Kalibrr' ? selected='selected' : '' %> value="Kalibrr">Kalibrr</option>
                <option <%= job.portal == 'Jobstreet' ? selected='selected' : '' %> value="Jobstreet">Jobstreet</option>
                <option <%= job.portal == 'Dealls' ? selected='selected' : '' %> value="Dealls">Dealls</option>
                <option <%= job.portal == 'Glints' ? selected='selected' : '' %> value="Glints">Glints</option>
              </select>
        </div>

        <div class="mb-3">
              <label for="status" class="form-label">Status</label>
              <select class="form-select" name="status" id="status">
                  <option <%= job.status == 'Waiting' ? selected : '' %> value="Waiting">Waiting</option>
                  <option <%= job.status == 'Followed-up' ? selected : '' %> value="Followed-up">Followed-up</option>
                  <option <%= job.status == 'TechnicalTest' ? selected : '' %> value="TechnicalTest">Technical Test</option>
                  <option <%= job.status == 'Interview' ? selected : '' %> value="Interview">Interview</option>
                  <option <%= job.status == 'Accepted' ? selected : '' %> value="Accepted">Accepted</option>
                  <option <%= job.status == 'Rejected' ? selected : '' %> value="Rejected">Rejected</option>
              </select>
        </div>

        <div class="mb-3">
            <label for="appliedAt" class="form-label">Applied At</label>
              <input
                type="text"
                id="appliedAt"
                name="appliedAt"
                class="form-control"
                value="<%= job.appliedAt %>"
                readonly
              />
        </div>
          
        <div class="mb-3">
          <button type="submit" class="btn btn-success">Save Change</button>
          <a href="/job" class="btn btn-primary">Back</a>
        </div>
      </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
<!-- Footer -->
<%- include('./layouts/footer') %>
