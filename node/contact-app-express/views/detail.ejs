<!-- Header -->
<%- include('layouts/header') %>
<!-- Nav -->
<%- include('layouts/nav') %>

<!-- Content -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-4">
      <h2>Contact Detail</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Tidak ada kontak
        <a href="/contacts" class="alert-link">balik yuk</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title">Nama: <%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            Nomor: <%= contact.nomor %>
          </h6>
          <a href="/contacts" class="card-link">Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Footer -->
<%- include('layouts/footer') %>
