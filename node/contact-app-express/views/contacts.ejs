<!-- Header -->
<%- include('layouts/header') %>
<!-- Nav -->
<%- include('layouts/nav') %>

<!-- Content -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contacts</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Kontak</a>

      <% if (msg.length !== 0 ) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor</th>
            <th scope="col">Details</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length == 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Gapunya temen ğŸ˜¢
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nomor %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %>"
                type="button"
                class="btn btn-primary badge rounded-pill"
              >
                Detail <i class="bi bi-info-circle"></i>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Footer -->
<%- include('layouts/footer') %>
